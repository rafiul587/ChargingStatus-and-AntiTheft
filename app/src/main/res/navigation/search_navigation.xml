<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_navigation"
    app:startDestination="@+id/navigation_search">

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.chargingstatusmonitor.souhadev.ui.sounds.SearchFragment"
        android:label="@string/search_screen_title"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navigation_search_to_navigation_unlock"
            app:destination="@id/navigation_unlock" />
    </fragment>

    <fragment
        android:id="@+id/navigation_unlock"
        android:name="com.chargingstatusmonitor.souhadev.ui.sounds.UnlockFragment"
        android:label="@string/unlock_screen_title"
        tools:layout="@layout/fragment_unlock" />

</navigation>